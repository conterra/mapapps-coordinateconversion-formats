{
    "properties": {
        "title": "${apptitle}"
    },
    "load": {
        "bundleLocations": [
            "localbundles",
            "bundles"
        ],
        "allowedBundles": [
            "system",
            "console",
            "notifier",
            "splashscreen",
            "templatelayout",
            "template-seasons",
            "theme-everlasting",
            "theme-winter",
            "theme-spring",
            "theme-summer",
            "theme-autumn",
            "map-init",
            "toolset",
            "banner",
            "basemaptoggler",
            "custominfo",
            "mapnavigation",
            "legend",
            "popups-default",
            "scalebar",
            "locateme",
            "locator-store",
            "coordinateviewer",
            "dn_coordinateconversionformats"
        ],
        "require": [
            "${app}.app"
        ],
        "i18n": [
            "bundle"
        ]
    },
    "bundles": {
        "banner": {
            "BannerWidget": {
                "label": "Developer Network",
                "image": "https://www.conterra.de/~/media/conterra/images/site_logos/conterra-logo.ashx",
                "imagePosition": "above",
                "link": "http://developernetwork.conterra.de"
            }
        },
        "basemaptoggler": {
            "Config": {
                "nextBasemap": "hybrid"
            }
        },
        "custominfo": {
            "CustomInfoToggleTool": [
                {
                    "id": "customInfoTool",
                    "activateOnStartup": true,
                    "title": "Information",
                    "tooltip": "Information",
                    "iconClass": "icon-custom-info-info",
                    "toolClass": "ctInfo",
                    "togglable": true,
                    "widgetSettings": {
                        "content": "This app shows the functionality of the CoordinateConversion Formats Bundle that adds additional formats to the Coordinateconversion Bundle.",
                        "window": {
                            "title": "Information",
                            "marginBox": {
                                "w": 300,
                                "h": 160,
                                "l": 20,
                                "b": 160
                            },
                            "draggable": true,
                            "closable": true,
                            "modal": false,
                            "maximizable": false,
                            "resizable": false
                        }
                    }
                }
            ]
        },
        "map-init": {
            "Config": {
                "map": {
                    "layers": [
                        {
                            "id": "esri_group_sites",
                            "title": "${map.esrisites.title}",
                            "portalItem": {
                                "id": "d0e2a965dd2e4f24b33495a4c2475bed"
                            },
                            "type": "AGS_FEATURE",
                            "elevationInfo": {
                                "mode": "on-the-ground"
                            },
                            "layerId": 0,
                            "visible": true,
                            "outFields": [
                                "*"
                            ],
                            "popupTemplate": {
                                "title": "{name2}",
                                "content": "<div><font size=\"4\">{name3}</font></div><div><hr /></div><h2>${map.esrisites.popup.address}</h2><div><font size=\"2\">{street}<br /></font></div><div><font size=\"2\">{plz_city}</font></div><div><h2>${map.esrisites.popup.contact}</h2></div><div><font size=\"2\">${map.esrisites.popup.tel} <a href=\"tel:{tel}\">{tel}</a></font></div><div><font size=\"2\">${map.esrisites.popup.mail} <a href=\"mailto:{email}\">{email}</a></font></div><div><font size=\"2\">${map.esrisites.popup.link} <a href=\"{link}\" target=\"_blank\">{link}</a></font></div>"
                            }
                        }
                    ],
                    "basemap": "streets",
                    "ground": {
                        "url": "https://elevation3d.arcgis.com/arcgis/rest/services/WorldElevation3D/Terrain3D/ImageServer",
                        "type": "ELEVATION"
                    }
                },
                "view": {
                    "viewmode": "2D",
                    "extent": {
                        "xmin": 600000,
                        "ymin": 5800000,
                        "xmax": 1700000,
                        "ymax": 7600000,
                        "spatialReference": 3857
                    }
                }
            }
        },
        "themes": {
            "ThemeModel": {
                "_selectedTheme": "everlasting"
            },
            "ThemeSelector": {
                "componentEnabled": true
            }
        },
        "toolset": {
            "ToolsetManager": {
                "toolsets": [
                    {
                        "id": "mapview_tools",
                        "tools": [
                            "coordinateconversionToggleTool",
                            "locateMeTool",
                            "zoomInTool",
                            "zoomOutTool",
                            "compassTool",
                            "restoreInitialViewTool"
                        ],
                        "registerWidget": {
                            "widgetRole": "mapview_tools"
                        },
                        "container": "ignore",
                        "windowType": "container",
                        "cssClass": "muted"
                    }
                ]
            }
        },
        "toolrules": {
            "ToolActiveStateManager": {
                "activateOnStartToolIds": [
                    "coordinateconversionToggleTool"
                ]
            }
        },
        "dn_coordinateconversionformats":{
            "Config":{
                "ETRS89geografisch": true,
                "GaussKrueger2": true,
                "GaussKrueger3": true,
                "GaussKrueger4": true,
                "GaussKrueger5": true,
                "UTM32": true,
                "UTM33": true,
                "WGS84PseudoMercator": true,
                "WGS84geografisch": true
            }
        }
    }
}
